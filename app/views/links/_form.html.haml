%p
%p
%fieldset
  %legend New link
  = form_for @link do |f|
    -if @link.errors.any?
      #error_explanation
        -#%h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
        - @link.errors.full_messages.each do |msg|
          .alert-message.error= msg
    .clearfix
      = f.label :url
      .input= f.text_field :url
    .clearfix
      = f.label :description
      .input= f.text_area(:description,{:id =>'markItUp'})
    .field
      = f.hidden_field :user_id, :value => current_user.id
    .actions
      = f.submit 'Save', :class =>'btn primary'
