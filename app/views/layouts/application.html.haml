!!!
%html
  %head
    %title Ur3
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar-wrapper{:style => "z-index: 5;"}
      .topbar{"data-dropdown" => "dropdown"}
        .topbar-inner
          .container
            %h3
              = link_to 'Lawcator', root_path
            %ul.nav
              %li{:class => get_class_for_navigation('home')}
                = link_to 'Home', root_path
              - if current_user && current_user.favorits
                %li{:class => get_class_for_navigation('favorits')}
                  = link_to 'Favorits', user_favorits_path(current_user)

              -#%li{:class => get_class_for_navigation('links')}
                -#= link_to 'My Link', user_links_path(current_user)
              -#%li.dropdown
              -#  %a.dropdown-toggle{:href => "#"} Dropdown
              -#  %ul.dropdown-menu
              -#    %li
              -#      %a{:href => "#"} Secondary link
              -#    %li
              -#      %a{:href => "#"} Something else here
              -#    %li.divider
              -#    %li
              -#      %a{:href => "#"} Another link
            -#%form.pull-left{:action => ""}
            -#  %input{:placeholder => "Search", :type => "text"}

            - if current_user
              %ul.nav.secondary-nav
                %li.dropdown
                  %a.dropdown-toggle{:href => "#"}= show_current_user
                  %ul.dropdown-menu
                    %li= link_to 'Profile', edit_user_registration_path
                    %li.divider
                    %li= link_to 'Sign out', destroy_user_session_path, :method => 'delete'
                    -#%li
                    -#  %a{:href => "#"} Something else here
                    -#%li.divider
                    -#%li
                    -#  %a{:href => "#"} Another link
        / /topbar-inner
      / /topbar


    .container_wrap
      .container
        .alert-message.warning.fade.in{"data-alert" => "alert"}
          = link_to 'x', '#', :class => 'close'
          %p
        .row
          .span16.around_wrap_content
            .row
              .span10.need_right_border
                .page-header2.home-header
                  #main-tweet-box
                    .tweet-box.condensed
                      .tweet-box-title
                        %h2= t(:searching_title)
                      .text-area
                        .text-area-editor.twttr-editor
                          = form_for 'search', :url => searches_path, :method => "get" do |f|
                            = f.text_field :value
                            %button.btn.success Go
                #around_search
                  #under_search
                    %ul.tabs
                      %li.active
                        %a{:href => "#"} Results
                      %li
                        %a{:href => "#"} Favorites
                      %li
                        %a{:href => "#"} My links

                .stream-items
                  - @links ||= Link.all
                  = render :partial => "/tweet"
              .span5.padding_content.more_block
                = render :partial => "/detailed"